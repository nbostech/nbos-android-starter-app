<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/view"
        android:background="@drawable/bg2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:id="@+id/reset_password"
            android:layout_marginTop="10dp"
            android:layout_below="@id/emailtxt"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_main"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/emailtxt"
            android:hint="@string/username_email"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/common_font_color"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:drawableRight="@drawable/mail_icon_scaled"
            android:drawableEnd="@drawable/mail_icon_scaled"
            android:background="@drawable/bg_edit_text"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/reset_password"
            android:layout_alignEnd="@+id/reset_password"
            android:layout_alignLeft="@+id/reset_password"
            android:layout_alignStart="@+id/reset_password" />

    </RelativeLayout>


</RelativeLayout>