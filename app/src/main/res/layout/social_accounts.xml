<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SocialAccounts"
        android:id="@+id/textView2" />
    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_connect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="15dp"
        android:background="@drawable/facebook"
        style="@style/FacebookLoginButton"
        android:paddingBottom="15dp"
        android:layout_below="@+id/textView2" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_sign_in"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/github"
        android:layout_toRightOf="@+id/textView4" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/linkedIn"
        android:background="@mipmap/ic_linkedin"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="Instagram Connect"
        android:id="@+id/instagram"
        android:layout_alignTop="@+id/btn_sign_in"
        android:layout_toRightOf="@+id/btn_sign_in" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="GitHub Connect"
        android:id="@+id/github"
        android:layout_below="@+id/facebook_connect"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Connected Accounts"
        android:id="@+id/textView4"
        android:layout_below="@+id/github"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/facebook"
        android:background="@drawable/facebook"
        android:layout_alignTop="@+id/btn_sign_in"
        android:layout_toRightOf="@+id/facebook_connect" />
</RelativeLayout>