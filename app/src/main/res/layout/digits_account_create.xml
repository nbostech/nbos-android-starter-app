<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signup"
        android:background="@drawable/login_button"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFF"

        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@+id/emailtxt"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/emailtxt"
        android:hint="Email"
        android:paddingLeft="2dp"
        android:inputType="textEmailAddress"
        android:background="#FFF"
        android:layout_below="@+id/lastname"
        android:layout_toRightOf="@+id/imageView7" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/lastname"
        android:hint="Last Name"
        android:background="#FFF"
        android:inputType="text"
        android:layout_below="@+id/firstname"
        android:layout_toRightOf="@+id/imageView7"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/firstname"
        android:hint="First Name"
        android:background="#FFF"
        android:inputType="text"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView8" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:id="@+id/imageView8"
        android:src="@mipmap/ic_person_outline_black_48dp"
        android:background="#FFF"
        android:layout_alignLeft="@+id/imageView7"
        android:layout_alignStart="@+id/imageView7"
        android:layout_alignTop="@+id/firstname"
        android:layout_alignBottom="@+id/firstname" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:id="@+id/imageView7"
        android:src="@mipmap/ic_person_outline_black_48dp"
        android:background="#FFF"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/lastname"
        android:layout_alignBottom="@+id/lastname" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:id="@+id/imageView5"
        android:src="@mipmap/ic_mail_outline_black_48dp"
        android:background="#FFF"
        android:layout_toLeftOf="@+id/emailtxt"
        android:layout_toStartOf="@+id/emailtxt"
        android:layout_alignTop="@+id/emailtxt"
        android:layout_alignBottom="@+id/emailtxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Connect with digits"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>
</RelativeLayout>