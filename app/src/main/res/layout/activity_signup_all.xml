<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:facebook="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/signup"
            android:background="@drawable/login_button"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:layout_below="@+id/checkBox"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/emailtxt"
            android:hint="Email"
            android:layout_marginTop="5dp"
            android:paddingLeft="2dp"
            android:layout_marginRight="20dp"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/username"
            android:background="#FFF"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginRight="20dp"
            android:id="@+id/password"
            android:hint="Password"
            android:background="#FFF"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/emailtxt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/lastname"
            android:hint="Last Name"
            android:background="#FFF"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/firstname"
            android:layout_alignLeft="@+id/firstname"
            android:layout_alignStart="@+id/firstname"
            android:layout_alignRight="@+id/firstname"
            android:layout_alignEnd="@+id/firstname" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/firstname"
            android:hint="First Name"
            android:background="#FFF"
            android:layout_below="@id/textView3"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/username"
            android:layout_alignStart="@+id/username" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/username"
            android:layout_below="@+id/lastname"
            android:hint="Username"
            android:layout_marginTop="5dp"
            android:inputType="text"
            android:layout_marginRight="20dp"
            android:background="#FFF"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_toEndOf="@+id/imageView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Create an account"
            android:textSize="25sp"
            android:id="@+id/textView3" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView4"
            android:src="@mipmap/ic_lock_outline_black_48dp"
            android:background="#FFF"
            android:layout_above="@+id/checkBox"
            android:layout_alignLeft="@+id/checkBox"
            android:layout_alignStart="@+id/checkBox"
            android:layout_alignTop="@+id/password" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:id="@+id/imageView5"
            android:src="@mipmap/ic_mail_outline_black_48dp"
            android:background="#FFF"
            android:layout_above="@+id/password"
            android:layout_toLeftOf="@+id/emailtxt"
            android:layout_toStartOf="@+id/emailtxt"
            android:layout_alignTop="@+id/emailtxt" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:id="@+id/imageView6"
            android:src="@mipmap/ic_person_outline_black_48dp"
            android:background="#FFF"
            android:layout_above="@+id/emailtxt"
            android:layout_toLeftOf="@+id/username"
            android:layout_toStartOf="@+id/username"
            android:layout_alignTop="@+id/username" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:id="@+id/imageView7"
            android:src="@mipmap/ic_person_outline_black_48dp"
            android:background="#FFF"
            android:layout_toLeftOf="@+id/lastname"
            android:layout_toStartOf="@+id/lastname"
            android:layout_alignTop="@+id/lastname"
            android:layout_alignBottom="@+id/lastname" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:id="@+id/imageView8"
            android:src="@mipmap/ic_person_outline_black_48dp"
            android:background="#FFF"
            android:layout_alignLeft="@+id/imageView7"
            android:layout_alignStart="@+id/imageView7"
            android:layout_alignTop="@+id/firstname"
            android:layout_alignBottom="@+id/firstname" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I accept all terms and conditions"
            android:layout_below="@+id/password"
            android:id="@+id/checkBox"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    </ScrollView>
</LinearLayout>
