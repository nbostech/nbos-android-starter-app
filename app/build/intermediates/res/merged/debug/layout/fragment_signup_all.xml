<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_button"
                android:text="Sign Up"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailtxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/username"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:background="#FFF"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="2dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/emailtxt"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:background="#FFF"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />


            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignEnd="@+id/firstname"
                android:layout_alignLeft="@+id/firstname"
                android:layout_alignRight="@+id/firstname"
                android:layout_alignStart="@+id/firstname"
                android:layout_below="@+id/firstname"
                android:layout_marginTop="5dp"
                android:background="#FFF"
                android:hint="Last Name"
                android:inputType="text" />

            <EditText
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignLeft="@+id/username"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/username"
                android:layout_below="@+id/textView3"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="#FFF"
                android:hint="First Name"
                android:inputType="text" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/lastname"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_toRightOf="@+id/imageView5"
                android:background="#FFF"
                android:hint="Username"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create an account"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25sp" />


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_above="@+id/checkBox"
                android:layout_alignLeft="@+id/checkBox"
                android:layout_alignStart="@+id/checkBox"
                android:layout_alignTop="@+id/password"
                android:background="#FFF"
                android:src="@mipmap/ic_lock_outline_black_48dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_above="@+id/password"
                android:layout_alignTop="@+id/emailtxt"
                android:layout_toLeftOf="@+id/emailtxt"
                android:layout_toStartOf="@+id/emailtxt"
                android:background="#FFF"
                android:src="@mipmap/ic_mail_outline_black_48dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_above="@+id/emailtxt"
                android:layout_alignTop="@+id/username"
                android:layout_toLeftOf="@+id/username"
                android:layout_toStartOf="@+id/username"
                android:background="#FFF"
                android:src="@mipmap/ic_person_outline_black_48dp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_alignBottom="@+id/lastname"
                android:layout_alignTop="@+id/lastname"
                android:layout_toLeftOf="@+id/lastname"
                android:layout_toStartOf="@+id/lastname"
                android:background="#FFF"
                android:src="@mipmap/ic_person_outline_black_48dp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_alignBottom="@+id/firstname"
                android:layout_alignLeft="@+id/imageView7"
                android:layout_alignStart="@+id/imageView7"
                android:layout_alignTop="@+id/firstname"
                android:background="#FFF"
                android:src="@mipmap/ic_person_outline_black_48dp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_centerHorizontal="true"
                android:text="I accept all terms and conditions" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
